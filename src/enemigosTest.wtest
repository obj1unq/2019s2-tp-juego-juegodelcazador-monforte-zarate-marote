import wollok.game.*
import enemigos.*
import cazador.*
import armas.*
import escenarios.*

describe "Test de enemigos spawn y borrado" {
	
	const casper = new Fantasma(position = (3->1))
	const gasparin = new Fantasma(position = (3->2))
	
	fixture{
		game.height(14)
		game.width(22)
		game.addVisual(casper)
		game.addVisual(gasparin)
	}
	test "Existe"{
		assert.that(game.hasVisual(casper))
	}
	
	test "Remover"{
		game.removeVisual(casper)
		assert.notThat(game.hasVisual(casper))
	}
	
	
	
}